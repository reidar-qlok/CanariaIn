@model IEnumerable<CanariaWeb.Models.DTO.ApartmentDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Apartments</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Apartment" asp-action="CreateApartment" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Apartment</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Occupany
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Occupancy</td>
					<td>@((item.Rate).ToString("c"))</td>
					<td>
						<a asp-controller="Apartment" asp-action="UpdateApartment" asp-route-apartmentId="@item.ApartmentId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Apartment" asp-action="DeleteApartment" asp-route-apartmentId="@item.ApartmentId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>